{
    "name": "dromru/iterable-dbal",
    "description": "Набор классов для разбиения пакетных sql-запросов на раздельные.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Los Romka",
            "email": "sin@drom.ru"
        }
    ],
    "keywords": [
        "php",
        "iterable",
        "dbal"
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.20",
        "friendsofphp/php-cs-fixer": "2.18.5",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "^2.6",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.32",
        "phpstan/phpstan-deprecation-rules": "^0.12.2"
    },
    "autoload": {
        "psr-4": {
            "Drom\\Iterable\\Dbal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Drom\\Iterable\\Dbal\\": "test/unit/"
        }
    },
    "scripts": {
        "phpstan": [
            "vendor/bin/phpstan analyse src/ test/"
        ],
        "phpunit": [
            "vendor/bin/phpunit"
        ],
        "phpmd": [
            "vendor/bin/phpmd src/,test/ text .phpmd/custom.xml"
        ],
        "phpcs": [
            "vendor/bin/phpcs --standard=PSR12 src/ test/"
        ],
        "php-cs-fixer": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "phpcbf": [
            "vendor/bin/phpcbf --standard=PSR12 -p -v --colors src/ test/"
        ],
        "fix": [
            "@php-cs-fixer",
            "@phpcbf"
        ],
        "lint": [
            "@phpcs",
            "@phpstan",
            "@phpmd"
        ],
        "test": [
            "@phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ocramius/package-versions": true,
            "phpstan/extension-installer": true
        }
    }
}
